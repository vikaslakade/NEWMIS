<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/inner_bg"
    android:weightSum="1">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

   <!-- <include layout="@layout/background"
        android:layout_height="match_parent"
        android:layout_width="match_parent"></include>-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"

        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textColor="@color/orange_hint"
        android:textSize="30sp"
        android:id="@+id/selectTitle"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:text="Form Date"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="20dp"
        android:textSize="30sp"
        android:id="@+id/textView9" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="date"
            android:hint="Select Date"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            android:focusableInTouchMode="false"
            android:focusable="false"
            android:padding="16dp"
            android:textSize="24sp"
            android:drawableRight="@drawable/ic_calender"

            android:id="@+id/from_date"
           />

    </LinearLayout>

    <TextView
        android:text="To Date"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="20dp"
        android:textSize="30sp"
        android:id="@+id/textView10" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:inputType="date"
            android:drawableRight="@drawable/ic_calender"
            android:id="@+id/to_date"
            android:layout_marginRight="20dp"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:hint="Select Date"
            android:textSize="24sp"
            android:padding="16dp"
            android:layout_marginLeft="20dp"

            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:text="Unit Name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="20dp"
        android:textSize="30sp"
        android:id="@+id/textView11" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
      >

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password"
            android:padding="16dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/clinic"

            android:hint="Select Unit"
             />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <Button
            android:text="SUBMIT"
            android:textColor="@color/white_text"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/button4"
            android:onClick="goToSelectReportScreen"
            android:layout_weight="1"
            android:textSize="24sp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/orange_button"/>


        <Button
            android:text="CANCEL"
            android:textColor="@color/white_text"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/button"
            android:onClick="gobackToselect"
            android:layout_weight="1"
            android:textSize="24sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/orange_button"/>

    </LinearLayout>
</LinearLayout>
</LinearLayout>
    </ScrollView>
</LinearLayout>